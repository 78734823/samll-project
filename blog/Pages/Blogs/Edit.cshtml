@page
@model blog.Pages.Blogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.Id" />
            <div class="form-group">
                <label asp-for="Blog.BlogUserId" class="control-label"></label>
                <select asp-for="Blog.BlogUserId" class="form-control" asp-items="ViewBag.BlogUserId"></select>
                <span asp-validation-for="Blog.BlogUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Content" class="control-label"></label>
                <input asp-for="Blog.Content" class="form-control" />
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.CreateTime" class="control-label"></label>
                <input asp-for="Blog.CreateTime" class="form-control" />
                <span asp-validation-for="Blog.CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Hits" class="control-label"></label>
                <input asp-for="Blog.Hits" class="form-control" />
                <span asp-validation-for="Blog.Hits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
